<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="rule_employee_own_payslip"  model="ir.rule">
            <field name="name">Access Employee own Payslip</field>
            <field name="model_id" model="ir.model" ref="model_hr_payslip"/>
            <field name="domain_force">[
                ('employee_id', 'in', [ee.id for ee in user.employee_ids]),
                ('state', '=', 'done'),
            ]
            </field>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>

        <record id="rule_manager_payslip" model="ir.rule">
            <field name="name">Access Manager Payslip</field>
            <field model="ir.model" name="model_id" ref="model_hr_payslip"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4,ref('base.group_hr_manager'))]"/>
        </record>


        <record id="rule_employee_own_t4"  model="ir.rule">
            <field name="name">Access Employee own T4</field>
            <field name="model_id" model="ir.model" ref="model_hr_cra_t4"/>
            <field name="domain_force">[
                ('employee_id', 'in', [ee.id for ee in user.employee_ids]),
                ('state', '=', 'sent'),
            ]
            </field>
            <field name="groups" eval="[(4,ref('base.group_user'))]"/>
        </record>

        <record id="rule_manager_t4"  model="ir.rule">
            <field name="name">Access Manager T4</field>
            <field name="model_id" model="ir.model" ref="model_hr_cra_t4"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4,ref('base.group_hr_manager'))]"/>
        </record>

    </data>
</openerp>
