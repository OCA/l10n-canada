<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- activity field inherited from hr_worked_days_activity -->
        <record id="view_hr_payslip_activity_form" model="ir.ui.view">
            <field name="name">hr.payslip.activity.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_worked_days_activity.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <!-- useless fields description and code -->
                <!-- we use the activity instead, which is much more clean -->
                <xpath expr="//field[@name='worked_days_line_ids']//field[@name='name']" position="replace">
                    <field name="name" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='worked_days_line_ids']//field[@name='code']" position="replace">
                    <field name="code" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='input_line_ids']//field[@name='code']" position="replace">
                    <field name="code" invisible="1"/>
                </xpath>

                <!-- useless field number_of_days -->
                <!-- in Canada we use number_of_hours -->
                <xpath expr="//field[@name='worked_days_line_ids']//field[@name='number_of_days']" position="replace"/>

                <!-- add on_change to activity_id, date_from and date_to -->
                <xpath expr="//field[@name='worked_days_line_ids']//field[@name='activity_id']" position="replace">
                    <field
                        name="activity_id"
                        on_change="onchange_activity_id(date_from, date_to, activity_id, contract_id)"
                    />
                </xpath>

                <!-- remove field contract on worked_days and inputs
                    we make these related to the payslip so it does not need to appear -->
                <xpath expr="//field[@name='worked_days_line_ids']//field[@name='contract_id']" position="replace">
                    <field name="contract_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='input_line_ids']//field[@name='contract_id']" position="replace">
                    <field name="contract_id" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='input_line_ids']//field[@name='name']" position="after">
                    <field name="category_id"/>
                </xpath>

                <!-- Hide the details from the employee -->
                <page string="Details By Salary Rule Category" position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </page>
                <page string="Worked Days &amp; Inputs" position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </page>
                <page string="Other Information" position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </page>

                <!-- Hide the buttons from the employee -->
                <button name="hr_verify_sheet" position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </button>
                <button name="refund_sheet"  position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </button>
                <button name="draft"  position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </button>
                <button name="compute_sheet"  position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </button>
                <button name="cancel_sheet"  position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </button>

            </field>
        </record>

        <record id="view_hr_payslip_benefit_form" model="ir.ui.view">
            <field name="name">hr.payslip.benefit.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_employee_benefit.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <!-- Hide employee benefits from the employee -->
                <page string="Employee Benefits" position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </page>
            </field>
        </record>

        <record id="view_hr_payslip_deduction_form" model="ir.ui.view">
            <field name="name">hr.payslip.deduction.form</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="l10n_ca_hr_income_tax_deductions.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <!-- Hide income tax deductions from the employee -->
                <page string="Income Tax Deductions" position="attributes">
                    <attribute name="groups">base.group_hr_manager</attribute>
                </page>
            </field>
        </record>

    </data>
</openerp>